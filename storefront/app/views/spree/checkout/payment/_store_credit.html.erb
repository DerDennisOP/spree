<% if @order.using_store_credit? %>
  <div class="d-flex flex-column mb-5" data-hook="checkout_payment_store_credit_success">
    <p class="store-credit-title font-body">
      <% if @order.gift_card.present? %>
        <%= Spree.t(:gift_card_amount_applied, amount: @order.display_gift_card_total, code: @order.gift_card.code) %>
      <% else %>
        <%= Spree.t(:store_credits_amount_applied, amount: @order.display_total_applicable_store_credit.abs) %>
      <% end %>

      <%= Spree.t(:you_will_need_to_pay_only, amount: @order.display_total_minus_store_credits) %>
    </p>
  </div>
<% end %>
