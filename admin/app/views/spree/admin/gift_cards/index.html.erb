<% unless turbo_frame_request? %>
  <% content_for :page_title do %>
    Gift Cards
  <% end %>

  <% content_for :page_actions do %>
    <%= link_to spree.admin_gift_cards_path(q: params[:q].to_unsafe_hash, per_page: Spree::GiftCardBatch::LIMIT, format: :csv), id: 'gift-card-batch-export-link', class: 'btn btn-light bg-transparent with-tip', title: 'Export gift cards to a CSV file' do %>
      <%= icon 'table-export', class: 'mr-2' %>
      Export codes
    <% end %>

    <div class="dropdown ml-2" id="page_actions_dropdown">
      <%= button_link_to 'Add a new gift card', '#', icon: 'plus', class: 'text-nowrap btn btn-primary align-self-center', no_text: true, data: { toggle: 'dropdown' }, id: 'more-actions-link' %>
      <div class="dropdown-menu dropdown-menu-right">


        <%= link_to spree.new_admin_gift_card_path,
              class: 'text-left dropdown-item'  do %>
          <%= icon 'add' %>
          One gift card
        <% end %>

        <%= link_to spree.new_admin_gift_card_batch_path,
              class: 'text-left dropdown-item'  do %>
          <%= icon 'add' %>
          A batch of gift cards
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>

<div class="card-lg p-0">
  <% if params[:frame_name].present? %>
    <%= turbo_frame_tag params[:frame_name], autoscroll: true, data: { autoscroll_block: :nearest, autoscroll_behavior: :smooth } do %>
      <%= render 'filters', frame_name: params[:frame_name] %>
      <%= render 'list' %>
    <% end %>
  <% else %>
    <%= render 'filters' %>
    <%= render 'list' %>
  <% end %>
</div>
